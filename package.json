{
  "name": "legado-reader",
  "displayName": "legado-reader",
  "description": "阅读3和阅读3服务器版的插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "legadoReader.refresh",
        "title": "刷新",
        "icon": "$(sync)"
      },
      {
        "command": "legadoReader.logout",
        "title": "退出登录",
        "icon": "$(log-out)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Legado Reader",
      "properties": {
        "legadoReader.server": {
          "type": "string",
          "default": "http://localhost:4396",
          "description": "服务器地址，如果是阅读3服务器版本，记得加上reader3后缀",
          "order": 0
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "legado-reader",
          "title": "Legado Reader",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "legado-reader": [
        {
          "id": "legado-login",
          "name": "登录",
          "type": "tree",
          "when": "!legadoReader.isLogin"
        },
        {
          "id": "legado-bookshelf",
          "name": "书架",
          "type": "tree",
          "when": "legadoReader.isLogin"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "legadoReader.refresh",
          "when": "legadoReader.isLogin",
          "group": "navigation"
        },
        {
          "command": "legadoReader.logout",
          "when": "legadoReader.isLogin",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
        {
          "view": "legado-login",
          "contents": "请点击登录以登入服务端\n[登录](command:legadoReader.login)"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.8"
  }
}
